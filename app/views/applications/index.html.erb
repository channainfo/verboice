<p>
  An Application specifies what to do when an incoming call arrives through a Channel.
</p>

<div><%= link_to 'Create a new Application', new_application_path %></div>

<% if @applications.present? %>

<br />

<table class="table">
  <tr>
    <th>Name</th>
    <th>Mode</th>
    <th></th>
  </tr>

<% @applications.each do |app| %>
  <tr>
    <td><%= app.name %></td>
    <td><%= app.info %></td>
    <td>
      <%= link_to 'view', app %>
      <%= link_to 'edit', edit_application_path(app) %>
      <%= link_to 'delete', app, :confirm => "Are you sure you want to delete the application #{app.name}?", :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<% end %>

<br />


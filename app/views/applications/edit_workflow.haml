- content_for :head do
  :javascript
    var commands = #{raw Command.specs.to_json};
    var flow = #{raw @application.flow.to_json};

%h1 Steps
%ul#workflow{'data-bind' => 'foreach: steps'}
  %li
    %h3{ko(text: 'name')}
    %div{'data-bind' => 'foreach: arguments'}
      %span
        %label{ko(text: "name()")}
        %input{'data-bind' => 'value: value, type: type' }
    %span{'data-bind' => 'click: remove'} remove

%h1 Commands
%ul#command-list{'data-bind' => 'foreach: commands'}
  %li
    %span{ko(text: 'name', click: 'add_to_steps')}
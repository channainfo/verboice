          %div{ 'data-bind' => 'foreach: steps' }
            .ha
              %span
              %p.button{ 'data-bind' => 'click: set_as_current, class: button_class, css: {active: $data == $root.current_step()}' }
              %p{ ko(text: 'name') }

  %span{ 'data-bind' => 'template: { name: display_template_for, with: current_step }' }

  .clear
  %br
  %hr
  %br
  .bottom-actions
    %button.white{:type => "submit"} Save
    = link_to 'Cancel', application_path(@application), :class => "button white cancel"

- content_for :head do
  :javascript
    var commands = #{raw Command.specs.to_json};
    var flow = #{raw @application.flow.to_json};

%ul#workflow{'data-bind' => 'foreach: steps'}
  %li
    %h3{ko(text: 'name')}
    %input{type: 'hidden', name: "application[flow][][ + name + ]", 'data-bind' => 'text: name()'}
    %span{'data-bind' => 'foreach: arguments'}
      %label{'data-bind' => 'name'}
      %input{'type' => 'text', 'name' => 'application[flow][][ + arg.name + ]' }
    %a{href: "javascript:void(0)"} remove

%ul#command-list{'data-bind' => 'foreach: commands'}
  %li{ko(text: 'name')}
%script{type: "text/html", id: "resource_template"}
  %tr{ko(click: 'edit', css: '{ clickable: !editing() }')}
    %td
      %span.name{'data-bind' => 'visible: !editing(), text: name'}
      = text_field_tag :name, '', :class => '', 'data-bind' => 'visible: editing, value: name', :placeholder => t('views.resources._resource_template.label.placeholder')
    / ko with: firstResource
    %td{ko(template: '{name: template}')}
    / /ko
    / ko with: secondResource
    %td{ko(template: '{name: template}')}
    / /ko
  %tr{ko(visible: 'editing')}
    %td
      %button.white{ko(click: 'save')}= t('views.resources._resource_template.action.save')
      %a.button.white.cancel{ko(click: 'cancel', visible: 'editing'), href: '#'}= t('views.resources._resource_template.action.cancel')
    %td
    %td.text-right
      %button.fdelete{ 'data-bind' => 'click: removeWithConfirm' }= t('views.resources._resource_template.action.remove_this_resource')

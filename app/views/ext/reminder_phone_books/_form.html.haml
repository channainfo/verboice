- content_for :head do
  :javascript
    window.languages = #{languages_for_js};
/ TODO url for create and update
- path = @reminder.new_record? ? ext_project_reminder_phone_books_path(@project, @reminder): ext_project_reminder_phone_book_path(@project, @reminder)  
= form_for([@project, @reminder], :url => path) do |f|
  -if @reminder.errors.any?
    #error_explanation
      %h2= t('views.ext.reminder_phone_books._form.errors.prohibited', :count => @reminder.errors.count)
      %ul
        - @reminder.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :phone_number, "#{t('views.ext.reminder_phone_books._form.label.phone_number')}"
    = f.text_field :phone_number, :class => 'w30'
  
  .field
    = f.label :type_id, "#{t('views.ext.reminder_phone_books._form.label.group')}"
    = f.select :type_id, @project.ext_reminder_phone_book_types.collect {|r| [ r.name, r.id ] }, {:prompt => "#{t('views.ext.reminder_phone_books._form.label.no_group')}"}, :class => 'w30'

  %button.white{:type =>'submit'}= t('views.ext.reminder_phone_books._form.action.save')
  = link_to t('views.ext.reminder_phone_books._form.action.cancel'), ext_project_reminder_phone_books_path(@project), :class => 'cancel'

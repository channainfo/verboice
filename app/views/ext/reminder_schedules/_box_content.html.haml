.box.grey.w60.collapsible_crud_box{:class => ("#{expanded ? 'expanded' : 'collapsed'}")}
  - if reminder_schedule.errors.any?
    .error_explanation
      %h2= t('views.ext.reminder_schedules._box_content.errors.prohibited', :count => reminder_schedule.errors.count)
      %ul
        - reminder_schedule.errors.full_messages.each do |msg|
          %li= msg
  .rightbuttons
    = link_to '', ext_project_reminder_schedule_path(@project, reminder_schedule), :confirm => t('views.ext.reminder_schedules._box_content.action.confirm_delete'), :method => :delete , :class => "fdelete" unless reminder_schedule.new_record?
  .summary
    = render 'summary', :reminder_schedule => reminder_schedule
  .clear
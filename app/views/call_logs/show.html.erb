<h2>Call log details</h2>

<table class="GralTable">
  <tr>
    <td><b>Not Before:</b></td>
    <td><%= @log.not_before %></td>
  </tr>
  <tr>
    <td><b>Started:</b></td>
    <td><%= @log.created_at %></td>
  </tr>
  <tr>
    <td><b>Finished:</b></td>
    <td><%= @log.finished_at %></td>
  </tr>
  <tr>
    <td><b>Duration:</b></td>
    <td><%= distance_of_time_in_words(@log.finished_at, @log.created_at, true) if @log.finished_at %></td>
  </tr>
  <tr>
    <td><b>Caller ID:</b></td>
    <td><%= @log.address %></td>
  </tr>
  <tr>
    <td><b>Direction:</b></td>
    <td><%= @log.direction %></td>
  </tr>
  <tr>
    <td><b>Channel:</b></td>
    <td><%= @log.channel.try(:name) %></td>
  </tr>
  <tr>
    <td><b>Queue:</b></td>
    <td><%= @log.call_queue.try(:name) %></td>
  </tr>
  <tr>
    <td><b>Application:</b></td>
    <td><%= @log.application.try(:name) %></td>
  </tr>
  <tr>
    <td><b>State:</b></td>
    <td><%= @log.state %></td>
  </tr>
</table>

<br />

<table class="GralTable">
  <tr>
    <th>Severity</th>
    <th>When</th>
    <th>Text</th>
  </tr>
  <% @log.structured_details.each do |detail| %>
    <tr class="<%= detail[:severity] %>">
      <td><%= detail[:severity] %></td>
      <td><%= detail[:time] %></td>
      <td><%= short_html detail[:text], 40 %></td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Back', call_logs_path %>

:css
  .ux-datepicker { background-color: white }

-if params[:mode] == 'advanced'
  #advanced-search.box.grey.w40
    = t('views.projects.call_logs.index.label.advanced_search')
    %br/
    %br/
    
    %form
      = hidden_field_tag :mode, :advanced
      .field
        = label_tag :phone_number, t('views.projects.call_logs.index.label.phone_number')
        = text_field_tag :phone_number, params[:phone_number], class: 'w30'
      .field
        = label_tag t('views.projects.call_logs.index.label.date')
        = text_field_tag :after, params[:after], placeholder: t('views.projects.call_logs.index.label.after'), class: %w(ux-custom-datepicker ux-datepicker w15)
        %span -
        = text_field_tag :before, params[:before], placeholder: t('views.projects.call_logs.index.label.before'), class: %w(ux-custom-datepicker ux-datepicker w15)
      .field
        = label_tag :call_flow_id, t('views.projects.call_logs.index.label.call_flow')
        = select_tag :call_flow_id, options_for_select(call_flows_options(project), params[:call_flow_id]), class: 'w30'
      %hr
      .right
        = link_to t('views.projects.call_logs.index.action.cancel'), '?mode=simple'
        = button_tag t('views.projects.call_logs.index.action.search'), class: 'white'
      .clear 

- else
  #simple-search
    %form
      %p
        = label_tag :phone_number, t('views.projects.call_logs.index.label.phone_number')
        = text_field_tag :phone_number, params[:phone_number], class: 'ux-search'
        = link_to t('views.projects.call_logs.index.label.advanced_search'), '?mode=advanced'

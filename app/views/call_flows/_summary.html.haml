.toptitle
  %span.title= call_flow.name
.middle
  = call_flow.mode.to_s.titleize
.bottom
  = link_to t('views.call_flows._summary.action.edit'), '#', :class => 'farrow collapse_trigger'
  = link_to t('views.call_flows._summary.action.download_call_result_as_csv'), download_results_call_flow_path(call_flow, :format => :csv), :class => "button fimport" unless call_flow.new_record? || call_flow.mode_callback_url? || call_flow.user_flow.nil?
  = link_to t('views.call_flows._summary.action.goto_designer'), edit_workflow_call_flow_path(call_flow), :class => 'button farrow flow_settings flow_settings' unless call_flow.new_record? || call_flow.mode_callback_url?

- expanded = expanded || (params[:call_flow_id] == call_flow.id.to_s)
.box.grey.w60.collapsible_crud_box{:class => ("#{expanded ? 'expanded' : 'collapsed'} #{call_flow.mode_flow? ? 'flow_mode' : 'callback_mode'}")}
  - if call_flow.errors.any?
    .error_explanation
      %h2= t('views.call_flows._box_content.errors.prohibited', :count => call_flow.errors.count)
      %ul
        - call_flow.errors.full_messages.each do |msg|
          %li= msg
  .rightbuttons
    = link_to '', call_flow, :confirm => t('views.call_flows._box_content.action.confirm_delete'), :method => :delete , :class => "fdelete" unless call_flow.new_record?
  .summary
    = render 'summary', :call_flow => call_flow

  .content
    = render 'form', :call_flow => call_flow
  .clear

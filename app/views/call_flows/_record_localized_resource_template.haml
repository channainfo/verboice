%script{type: "text/html", id: "record_localized_resource_template"}
  .text-right
    .player
      %span{ko(text: 'duration', css: "{recording: recording()}")}
      %button.fplay{ko(click: 'play', visible: '!playing()', css: "{disabled: recording() || !has_audio()}")}
      %button.fstop{ko(click: 'stop', visible: 'playing()')}
      %button.frecording{ko(click: 'record', visible: '!recording()', css: "{disabled: playing()}")}
      %button.fstopped{ko(click: 'stop', visible: 'recording()', css: "{active: recording(), disabled: playing()}")}
    .w22
      %textarea{:rows => 6, :placeholder => "#{t('views.call_flows._record_localized_resource_template.label.placeholder')}", 'data-bind' => 'value: description'}